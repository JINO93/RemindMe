<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Reminder"/>

    <style name="Reminder.Title">
        <item name="android:paddingStart">@dimen/global_margin_small</item>
        <item name="android:paddingEnd">@dimen/global_margin_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/global_margin_xxlarge</item>
    </style>

    <style name="Pickers" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:paddingStart">@dimen/global_margin_xxlarge</item>
        <item name="android:paddingEnd">@dimen/global_margin_xxlarge</item>
        <item name="android:textSize">@dimen/text_size_button_primary</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

</resources>
